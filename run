#!/usr/bin/env bash

server="$1"
NODE_ENV=production node ./servers/$server &
pid=$!

echo "run $1 after 10s..."
sleep 10
echo "running..."

wrk "http://127.0.0.1:$PORT/$2" \
  -d 1m \
  -c 400 \
  -t 12 \
  | grep 'Requests/sec' \
  | awk -v server="$server" '{ print $2 " Requests/sec - " server }' >> results.txt

kill $pid
